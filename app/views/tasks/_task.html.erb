<tr id="task-<%= task.id %>">
  <td style="width: 60px">
    <%= image_tag "sample", width: "50", height: "50", class: "rounded-circle" %>
  </td>
  <td>
    <h3 class="small"><%= task.user.name %></h3>
    <p><%= simple_format(task.body) %></p>
  </td>
  <% if current_user.own?(task) %>
    <td class="action">
      <ul class="list-inline justify-content-center" style="float: right;">
        <li class="list-inline-item">
          <%= link_to "#", class: "edit-task-link" do %>
            <i class="bi bi-pencil-fill"></i>
          <% end %>
        </li>
        <li class="list-inline-item">
          <%= link_to "#", class: "delete-task-link" do %>
            <i class="bi bi-trash-fill"></i>
          <% end %>
        </li>
      </ul>
    </td>
  <% end %>
</tr>