<div class="row mb-3" id="task-form">
  <div class="col-lg-8 offset-lg-2">
    <%= form_with model: task, url: schedule_tasks_path(schedule) do |f| %>
      <%= f.label :body %>
      <%= f.text_area :body, class: "form-control mb-3", row: "4", placeholder: Task.human_attribute_name(:body) %>
      <%= f.submit t('defaults.post'), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>