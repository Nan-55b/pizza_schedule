<div class="container pt-3">
  <div class="row">
    <div class="col-lg-10 offset-lg-1">
      <!-- 検索フォーム -->
      <%= form_with url: schedules_path, method: :get, local: true do %>
        <div class="input-group mb-3">
          <%= text_field_tag :query, params[:query], class: "form-control", placeholder: "検索ワード" %>
          <div class="input-group-append">
            <%= submit_tag "検索", class: "btn btn-primary" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <!-- 一覧 -->
  <div class="row">
    <div class="col-12">
      <div class="row">
        <% if @schedules.present? %>
          <%= render @schedules %>
        <% else %>
          <div class="mb-3">スケジュールがありません</div>
        <% end %>
      </div>
    </div>
  </div>
</div>